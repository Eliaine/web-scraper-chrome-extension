{
  "name": "web-scraper-chrome-extension",
  "version": "1.0.0",
  "description": "Web Scraper is a chrome browser extension built for data extraction from web  pages. Using this extension you can create a plan (sitemap) how a web site  should be traversed and what should be extracted. Using these sitemaps the  Web Scraper will navigate the site accordingly and extract all data. Scraped  data later can be exported as CSV.",
  "main": "config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "watch": {
    "generate": {
      "patterns": ["extension"],
      "ignore": "extension/generated",
      "extensions": "js"
    }
  },
  "scripts": {
    "test": "mocha tests/spec/ScraperSpec-mocha",
    "test-jasmine": "jasmine-node tests/spec/ScraperSpec.js",
    "generate-scraper": "browserify extension/content_script/content_scraper.js --standalone contentScraper > extension/generated/content-scraper.js",
    "generate-background-script": "browserify extension/background_page/background_script.js --standalone backgroundScraper > extension/generated/background-scraper.js",
    "generate-devtools": "browserify extension/scripts/App.js --standalone devtoolsApp > extension/generated/devtools-scraper.js",
    "generate": "npm run generate-scraper && npm run generate-background-script && npm run generate-devtools",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinsbalodis/web-scraper-chrome-extension.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/martinsbalodis/web-scraper-chrome-extension/issues"
  },
  "homepage": "https://github.com/martinsbalodis/web-scraper-chrome-extension#readme",
  "devDependencies": {
    "jasmine-node": "^1.14.5",
    "mocha": "^3.2.0",
    "npm-watch": "^0.1.8",
    "standard": "^9.0.2"
  },
  "dependencies": {
    "browserify": "^14.1.0",
    "chrome-remote-interface": "^0.18.0",
    "jquery-deferred": "^0.3.1"
  }
}
